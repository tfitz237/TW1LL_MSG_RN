  "compilerOptions": {
    "target": "es2015",
    "jsx": "react",
    "module" :"es2015",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
